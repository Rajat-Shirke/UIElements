<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UIPractice.overlappingLottieinGridLayout"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="overlappingLottieinGridLayout">
    <VerticalStackLayout>
        <Grid RowDefinitions="Auto">
            
            <Frame BackgroundColor="AliceBlue" Grid.Row="0" HeightRequest="250" WidthRequest="250"/>
            <skia:SKLottieView RepeatCount="-1"
                           Grid.Row="0"
                           HeightRequest="250"
                           WidthRequest="250"
                           RepeatMode="Restart"
                           Source="qrScannerAnimation.json" />
        </Grid>
            
    </VerticalStackLayout>
</ContentPage>
